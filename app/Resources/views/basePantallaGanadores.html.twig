        {% set colorbasemenu = "#A0A0A0" %}
        {% set colormenu1 = "#95C11F" %}
        {% set colormenu2 = "#662483" %}
        {% set colormenu3 = "#E94E1B" %}
        {% set colormenu4 = "#3AAA35" %}
        {% set colormenu5 = "#3AAA35" %}
        {% set colormenu6 = "#F39200" %}
        {% set colormenu7 = "#E6007E" %}

        {% if namevar == "eventos" %}
            {% set coloractual = colormenu1 %}
        {% elseif namevar == "eventosusr" %}
            {% set coloractual = colormenu1 %}
        {% elseif namevar == "subeventos" %}
            {% set coloractual = colormenu1 %}
        {% elseif namevar == "proveedores" %}
            {% set coloractual = colormenu2 %}
        {% elseif namevar == "proveedoresusuariosusr" %}
            {% set coloractual = colormenu2 %}
        {% elseif namevar == "asociados" %}
            {% set coloractual = colormenu3 %}
        {% elseif namevar == "administrador" %}
            {% set coloractual = colormenu4 %}
        {% elseif namevar == "administradorregional" %}
            {% set coloractual = colormenu5 %}
        {% elseif namevar == "eventosempleados" %}
            {% set coloractual = colormenu6 %}
        {% elseif namevar == "empleados" %}
            {% set coloractual = colormenu6 %}
        {% elseif namevar == "logs" %}
            {% set coloractual = colormenu7 %}
        {% else %}
            {% set coloractual = colorbasemenu %}
        {% endif %}

        <style type="text/css">
        
            .btn-primary, .btn-primary:link, .btn-primary:visited {
