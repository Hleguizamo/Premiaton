{% extends '::baselogin.html.twig' %}
{% block stylesheets %}
    {{ parent() }}   
{% endblock %}
{% block javascripts %}
    {{ parent() }}    
{% endblock %}
{% block body %}
{% if sendPwd is defined %}
{% if sendPwd == "1" %}
<script type="text/javascript">
 alert("Se ha enviado su contraseña");
   /*setTimeout(function () {
        swal({title: '', text: 'Se ha enviado su contraseña', type: 'success', confirmButtonText: 'Continuar'});
    }, 1000);*/
</script>
{% elseif sendPwd == "NO" %}
<script type="text/javascript">
    alert("El email que ha enviado no existe en el sistema");
   /*setTimeout(function () {
        swal({title: '', text: 'El email que ha enviado no existe en el sistema', type: 'danger', confirmButtonText: 'Continuar'});
    }, 1000);*/
</script>
{% endif %}
{% endif %}
<!-- Modal -->
<div id="modal4" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">¿Olvido su contraseña?</h4>
      </div>
      <div class="modal-body">
        <form class="uk-panel uk-panel-box uk-form" method="POST" action="{{ path('usuario_inicio_login') }}" id="buscarAdvanzadoForm" autocomplete="off">
        <label>Por favor escriba su email y será enviada su contraseña: </label>                      
        <input type='email' class="form-control" style="height:32px;" value="" name="email" required="required" />
        <br>
        <input type="hidden" name="sendEmail" id="sendEmail" value="true" required="">
        <button type="submit" class="btn btn-primaryorange">Enviar Link</button>
        <input type="hidden" name="sendPwdForm" value="true">
      </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
      </div>
    </div>

  </div>
</div>
<!-- Fin Modal -->

<div class="col-xs-0 col-sm-2 col-md-4 col-lg-4">&nbsp;</div>
<div class="container col-xs-12 col-sm-8 col-md-4 col-lg-4" style="margin: 0px auto;">
    <div class="panel panel-default" style="border:1px solid #FCEBE0;">
        <div class="panel-heading" style="background: #ffffff; text-align:center; border:0px solid #FCEBE0;">
            <center>
            <img class="img-responsive" src="{{ asset('images/logoFinal1.png') }}"></center>                        
        </div>
        <div class="panel-footer" style="border:0px solid #FCEBE0;">
            <div class="panel-title" style="text-align: center; font-size:12px;"><strong>PROVEEDORES</strong></div>                        
        </div>
        <div style="padding-top:30px; border:0px solid #FCEBE0;" class="panel-body"  >  
            <form method="POST" action="{{ path('usuario_inicio_login_check') }}" id="autenticarForm" autocomplete="off">
            <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
               <input type="text" placeholder="Usuario" required name="_username" id="usuario" class="form-control" style="height:32px;" autocomplete="off">                                    
            </div>
            <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                 <input type="password" placeholder="Contraseña" required value="" name="_password" id="clave" class="form-control" style="height:32px;" autocomplete="off">
            </div>
            <div class="form-group">  
                <center>             
                <button type="submit" class="btn btn-primaryorange">
                    <i class="fa fa-check"></i> Ingresar a Premiatón
                </button>
                </center>
            </div>
            </form> 
            <div style="text-align:center;" > 
                <a href="javascript:void(0);" data-toggle="modal" data-target="#modal4">¿Olvido su contraseña?</a>
            </div>
            </div>                      
        </div>       
    </div>
</div>
{% endblock %}
